<%= content_for(:page_header) {t('.title')} %>
<p><%= form_tag articles_path do %>
      <%= check_box_tag :status,
    :data => { :size=>'large', 'on-color'=>'success', 'on-text'=>'YES', 'off-text'=>'NO' } %> 
      <%= submit_tag "go" %>
   <% end %>
</p>
<%= form_tag(articles_path, :method => "GET") do %>
<%= text_field_tag :status %>
<%= submit_tag "pencet"%>
<% end %>
<br />
<h2>Import Article</h2>
<%= form_tag import_articles_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag %>
<% end %> 
<br />
