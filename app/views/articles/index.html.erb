<h1>Upload</h1>
<br />
<table class="table stripped">
  <thead>
    <th>No</th>
    <th>Title</th>
    <th>Body</th>
    <th></th>
    <th>status</th>
    <th>Action</th>
   </thead>
  <% @articles.each_with_index do |article, index| %>
  <tbody>
  <tr>
  	<td><%= index + 1 %></td>
  	<td><%= article.title %></td>
  	<td><%= article.body %><td>
  	<td><%= article.status %></td>
    <td><%= link_to t('forms.buttons.edit'), edit_article_path(article)%> | <%= link_to 'Show', article_path(article) %> | <%= link_to 'destroy', article_path(article), method: "DELETE"%></td>
  </tr>
  </tbody>
  <% end %>
 </table>

 <script type="text/javascript">
  $(document).ready(function() {
    $('input:checkbox').bootstrapSwitch();
  });
  </script>
