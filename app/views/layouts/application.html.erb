<!DOCTYPE html>
<html>
<head>
  <title>Blog18n</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar navbar-default navbar-static-top">
    <div class="container">
      <div class="navbar-header">
        <%= link_to 'Educator', root_path, class: 'navbar-brand' %>
      </div>

      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to t('menu.new_article'), new_article_path %></li>
      </ul>
      <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          <%= t('menu.languages.lang') %>
          <span class="caret"></span>
        </a>
       
        <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to t('menu.languages.en'), change_locale_path(:en) %>
          </li>
          <li>
            <%= link_to t('menu.languages.ru'), change_locale_path(:ru) %>
          </li>
        </ul>
      </li>
     <li class="dropdown">
       <a class="dropdown-toggle" data-toggle="dropdown" href="#">
         Select status
         <span class="caret"></span>
       </a>
     <ul class="dropdown-menu" role="menu">
          <li>
            <%= link_to "Active", status_articles_path(:active) %>
          </li>
          <li>
            <%= link_to "Inactive", status_articles_path(:inactive) %>
          </li>
          <li>
            <%= link_to "All", root_path %>
          </li>
     </li>
    </ul>
    <li class="dropdown">
       <a class="dropdown-toggle" data-toggle="dropdown" href="#">
         Login menu
         <span class="caret"></span>
       </a>
    <ul class="dropdown-menu" role="menu">
          <% if current_user %>
          <li>Loggin as <%= current_user.email %></li>
          <li><%= link_to "logot", logot_path %></li>
          <% else %>
          <li><%= link_to "login", sign_in_path %></li>
          <li><%= link_to "Sign up", sign_up_path %></li>
          <% end %>
    </ul>
    </li>
    </div>
  </div>
  
  <div class="container">
  	<% flash.each do |key, value| %>
      <div class="alert <%= flash_class key %> alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  	    <p> <%= value %> </p>
  	  </div>
    <% end %>
   <div class="page-header">
   	<h1><%= yield :page_header %></h1> 
   </div>
   
    <%= yield %>
  </div>
  
</body>
</html>
